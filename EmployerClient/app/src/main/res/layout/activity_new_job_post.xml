<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewJobPostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/background_toolbar"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_button_back"
            app:subtitle="@string/toolbar_subtitle_text_new_job_post"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:subtitleTextColor="@color/text_color_light"
            app:title="@string/toolbar_title_text_new_job_post"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:titleTextColor="@color/text_color_light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/inputImage"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/placeholder_image_post"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintDimensionRatio="H,4:3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:hint="@string/input_hint_title"
                app:boxStrokeColor="@color/color_primary"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_input_title"
                app:startIconTint="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:inputType="textMultiLine|textCapWords"
                    android:maxLength="150"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputKeywordLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:hint="@string/input_hint_keyword"
                app:boxStrokeColor="@color/color_primary"
                app:endIconDrawable="@drawable/ic_button_add_keyword"
                app:endIconMode="custom"
                app:endIconTint="@color/tint_icon"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_input_keyword"
                app:startIconTint="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputKeyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text|textCapWords"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="@string/label_text_note_keyword"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/keywordChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnUndo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_undo" />

                            <ImageButton
                                android:id="@+id/btnRedo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_redo" />

                            <ImageButton
                                android:id="@+id/btnBold"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_bold" />

                            <ImageButton
                                android:id="@+id/btnItalic"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_italic" />

                            <ImageButton
                                android:id="@+id/btnUnderline"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_underline" />

                            <ImageButton
                                android:id="@+id/btnStrikethrough"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_strikethrough" />

                            <ImageButton
                                android:id="@+id/btnHeader"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_header" />

                            <ImageButton
                                android:id="@+id/btnAlignLeft"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_align_left" />

                            <ImageButton
                                android:id="@+id/btnAlignCenter"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_align_center" />

                            <ImageButton
                                android:id="@+id/btnAlignRight"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_align_right" />

                            <ImageButton
                                android:id="@+id/btnBlockquote"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_blockquote" />

                            <ImageButton
                                android:id="@+id/btnInsertBullet"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_insert_bullet" />

                            <ImageButton
                                android:id="@+id/btnInsertNumber"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_insert_number" />

                            <ImageButton
                                android:id="@+id/btnInsertLink"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@color/color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_button_insert_link" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/inputDescriptionGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <jp.wasabeef.richeditor.RichEditor
                            android:id="@+id/richEditor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:hint="@string/input_hint_location"
                app:boxStrokeColor="@color/color_primary"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_icon_location"
                app:startIconTint="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:inputType="text|textCapWords"
                    android:maxLength="150"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:hint="@string/input_hint_type"
                app:boxStrokeColor="@color/color_primary"
                app:endIconTint="@color/tint_icon"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_input_type"
                app:startIconTint="@color/color_primary">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/inputType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:inputType="none"
                    android:maxLength="150"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:hint="@string/input_hint_salary"
                app:boxStrokeColor="@color/color_primary"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_input_salary"
                app:startIconTint="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:inputType="numberDecimal"
                    android:maxLength="150"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnUploadPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_icon_add"
        app:backgroundTint="@color/color_primary"
        app:tint="@color/tint_icon_light" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state-->
    <item android:drawable="@color/color_on_primary" android:state_enabled="false" />
    <!-- pressed state / clicked state -->
    <item android:drawable="@color/color_primary_variant" android:state_enabled="true" android:state_pressed="true" />
    <!-- enabled state / default state-->
    <item android:drawable="@color/color_primary" android:state_enabled="true" />
</selector>